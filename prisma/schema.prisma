generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique   // e.g., "Financial", "Administrative"
  description String?             // Optional friendly description
  icon        String?             // e.g., URL to an icon asset
  reports     Report[]
}
model Report {
  id         String    @id @default(uuid())
  trackingId String    @unique
  title      String
  content    String
  status     ReportStatus
  // Rename the previous category field to categoryId to reference the Category model
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  evidence   Evidence[]
}

model Evidence {
  id        String  @id @default(uuid())
  reportId  String
  fileHash  String
  fileType  String
  encrypted Boolean @default(true)
  report    Report  @relation(fields: [reportId], references: [id])
}

enum ReportStatus {
  SUBMITTED
  UNDER_REVIEW
  IN_PROGRESS
  RESOLVED
}
