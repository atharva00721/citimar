generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Report {
  id          String   @id @default(uuid())
  trackingId  String   @unique
  content     String
  evidence    Evidence[]
  status      ReportStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Evidence {
  id        String   @id @default(uuid())
  reportId  String
  fileHash  String
  fileType  String
  encrypted Boolean  @default(true)
  report    Report   @relation(fields: [reportId], references: [id])
}

enum ReportStatus {
  SUBMITTED
  UNDER_REVIEW
  IN_PROGRESS
  RESOLVED
}
